        {% set currentRoute = app.request.get('_route') %}

        <main>
            <div class="container" style="width: 100%;">
                <a class="link-button" href="{{ path('app_home') }}">Revenir Ã  l'accueil <span class="arrow"></span></a>
                {% if currentRoute == 'app_project_detail' %}
                <a class="link-button" href="{{ path('app_project') }}">Revenir aux projets <span class="arrow"></span></a>
                {% endif %}
                
                <section id="proj" class="container-section">
                    {% if currentRoute == 'app_project' %}
                        <h2>Mes projets</h2>
                    {% else %}
                        <h2>Projet #{{ project.id }} - {{ project.name }}</h2>
                    {% endif %}
                    
                    
                    {% block filters %}{% endblock %}
                    <div class="project-list">
                        {% block projects %}{% endblock %}
                    </div>

                    {% if currentRoute == 'app_project_detail' %}
                    <div class="project-details">
                        {% block project_detail %}{% endblock %}
                    </div>
                    {% endif %}
                    
                </section>
            </div>
        </main>

        <a id="back-to-top" class="fas" role="button" tabindex="0"></a>

        <footer>
            <div class="footer-container">
                <div id="footer-myinfo" class="footer-sub">
                    {% block footer_section_1 %}{% endblock %}
                </div>
                <div id="footer-school" class="footer-sub">
                    {% block footer_section_2 %}{% endblock %}
                </div>
                <div id="footer-firm" class="footer-sub">
                    {% block footer_section_3 %}{% endblock %}
                </div>
                <div id="footer-social" class="footer-sub">
                    {% block footer_section_4 %}{% endblock %}
                </div>
            </div>
        </footer>
    </body>
