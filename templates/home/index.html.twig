{% block career %}

    <div class="career-list">
        <h3>Scolaire</h3>
        {% for careerItem in careersByType.sco %}
            <div class="career-block">
                <div class="career-title">
                    <span class="date">
                        {% if careerItem.startsAt != careerItem.endsAt %}
                            {{ careerItem.startsAt|format_datetime(pattern='MMMM Y')|title }}-{{ careerItem.endsAt|format_datetime(pattern='MMMM Y')|title }}
                        {% else %}
                            {{ careerItem.startsAt|format_datetime(pattern='MMMM Y')|title }}
                        {% endif %}
                    </span>
                    | {{ careerItem.title }}</div>
                <div class="career-desc">
                    {{ careerItem.description|raw }}
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="career-list">
        <h3>Professionnel</h3>
        {% for careerItem in careersByType.pro %}
            <div class="career-block">
                <div class="career-title">
                    <span class="date">
                        {% if careerItem.startsAt != careerItem.endsAt %}
                            {{ careerItem.startsAt|format_datetime(pattern='MMMM Y')|title }}-{{ careerItem.endsAt|format_datetime(pattern='MMMM Y')|title }}
                        {% else %}
                            {{ careerItem.startsAt|format_datetime(pattern='MMMM Y')|title }}
                        {% endif %}                                    
                    </span>
                    | {{ careerItem.title }}
                </div>
                <div class="career-desc">
                    {{ careerItem.description|raw }}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}



{% block skills %}

    {% for skillType in skillTypes %}
        <div class="skills-block">
            <h3 class="skills-block-title">{{ skillType.label }}</h3>
            <div class="skills">
                <div class="skill-icons">
                    {% for skill in skillType.skills %}
                        {% set skillClass = skill.isNew ? 'skill pill new' : (skill.isUpgraded ? 'skill pill upgrade' : 'skill' ) %}
                        
                        <div class="{{ skillClass }}" data-name="{{ skill.name }}">
                            <img src="{{ asset("#{skillIconsDir}#{skill.icon}") }}">
                        </div>
                    {% endfor %}
                </div>
                <span class="skill-name">default</span>
            </div>
            <div class="skills-block-desc">
                {{ skillType.description|raw }}
            </div>
        </div>
    {% endfor %}

{% endblock %}



{% set projectCoversDir = 'assets/img/projects/' %}

{% block projects %}

    {% for project in projects %}
        <div class="project-card">
            <div class="project-card-body">
                <h5 class="project-card-title">{{ project.name }}</h5>
                <p>{{ project.summary }}</p>
            </div>
            <div class="project-card-footer">
                {% for tag in project.tags %}
                    <span class="tag" style="border-color: {{ tag.color }}; color: {{ tag.color }}; background-color: {{ tag.color }}33">{{ tag.label }}</span>
                {% endfor %}
            </div>
            <a href="/project/{{ project.id }}" class="link-stretch"></a>
            <img src="{{ asset("#{projectCoversDir}#{project.cover}") }}" alt="">
        </div>
    {% endfor %}

{% endblock %}



